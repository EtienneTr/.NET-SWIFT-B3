<?xml version="1.0" encoding="utf-8"?>
<Page
	x:Class="AppNet.Views.MainPage" 
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Core="using:Microsoft.Xaml.Interactions.Core" 
	xmlns:Interactivity="using:Microsoft.Xaml.Interactivity" xmlns:controls="using:Template10.Controls" 
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="using:AppNet.Views" 
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:vm="using:AppNet.ViewModels"
	DataContext="{Binding Source={StaticResource Locator}, Path=Login}">
	

    <RelativePanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" >
        <controls:PageHeader x:Name="PageHeaderConnection" Content="Connexion">
	<StackPanel Margin="100" Name="StackPanelConnection" VerticalAlignment="Center" HorizontalAlignment="Center">

	    <TextBlock Name="CodeUser" Text="Code PIN twitter :"></TextBlock>
        <TextBox Name="CodeValue" Height="25" Width="200" Margin="0,10,0,30" Text="{Binding Codeinput, Mode=TwoWay}"></TextBox>
		<Button Name="Pin" Content="Pin" Command="{Binding GetCode}"" Margin="200,200,200,0" ></Button>
	    <Button Name="Connect" Content="Se Connecter a Twitter" Margin="200,200,200,0" Command="{Binding Connection}" ></Button>
 	</StackPanel>
    </RelativePanel>

</Page>